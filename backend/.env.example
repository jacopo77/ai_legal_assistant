# Backend configuration
ENVIRONMENT=development
HOST=127.0.0.1
PORT=8000
ALLOWED_ORIGIN=http://localhost:3000

# OpenAI (required for embeddings and chat)
OPENAI_API_KEY=sk-...
OPENAI_MODEL=gpt-4o-mini
